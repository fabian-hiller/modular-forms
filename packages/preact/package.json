{
  "name": "@modular-forms/preact",
  "description": "The modular and type-safe form library for Preact",
  "version": "0.1.1",
  "license": "MIT",
  "author": "Fabian Hiller",
  "homepage": "https://modularforms.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabian-hiller/modular-forms"
  },
  "keywords": [
    "modular-forms",
    "form",
    "forms",
    "preact",
    "signals",
    "performance",
    "bundle-size",
    "validation",
    "typescript",
    "type-safe"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "preact": "./dist/source/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts",
      "preact": "./dist/source/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build --mode lib && tsc",
    "format": "prettier --write .",
    "format.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\" && tsc --noEmit",
    "publish": "npm publish"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@preact/signals": "^1.1.3",
    "@types/eslint": "^8.37.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-preact": "^1.3.0",
    "preact": "^10.13.2",
    "typescript": "4.9.5",
    "vite": "^4.3.5",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "@preact/signals": "^1.0.0",
    "preact": "^10.0.0"
  }
}
